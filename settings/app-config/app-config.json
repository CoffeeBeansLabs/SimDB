{
  "indexer": {
    "default_dims": 100,
    "default_nn": 10,
    "indexer_name": "FAISS-IVF",
    "indexer_impl_conf": {
      "distance_metric": "L2",
      "cluster.max_size": 1000,
      "nprobe_ratio": 0.1
    },
    "retrain_frequency": {
      "unit": "sec",
      "offset": 10,
      "interval": 20
    },
    "vector_store": {
      "timestamp_field": null,
      "key_expire_duration_secs": 7238000
    }
  },
  "connectors": {
    "readers": [
      {
        "name": "kafka_reader",
        "type": "kafka",
        "connection": {
          "settings": {
            "bootstrap.servers": "localhost:9092",
            "enable.auto.commit": true,
            "group.id": "prod_faiss_dss_2408_0000001",
            "auto.offset.reset": "earliest"
          },
          "topic": "article-events",
          "polling_frequency": 0.5,
          "max_none_messages": 2
        },
        "fetch_trigger_frequency": {
          "unit": "sec",
          "offset": 2,
          "interval": 20
        },
        "stream": true,
        "temp_output_buffer": "reader.kafka.buffer",
        "update_method": "append",
        "mapper": "default_content_mapper"
      },
      {
        "name": "file_reader",
        "type": "file",
        "format": "json",
        "path": "./assets/july2020.json",
        "stream": false,
        "temp_output_buffer": "reader.file.buffer",
        "update_method": "replace",
        "mapper": "default_content_mapper"
      }
    ],
    "writers": [
      {
        "type": "redis",
        "name": "redis_writer",
        "mapper": "result",
        "key_format": "130916:articleSimsIndexer:{0}",
        "key_expire_secs": 604800,
        "rank_field": "timestamp",
        "connection": {
          "mode": "standalone",
          "standalone": {
            "host": "localhost",
            "port": "6379"
          },
          "cluster": [
            {
              "host": "172.17.0.1",
              "port": "8005"
            }
          ]
        }
      }
    ]
  },
  "mappers": {
    "content_obj": {
      "name": "default_content_mapper",
      "standard_fields": {
        "map": {
          "id": "id",
          "vector": "vector",
          "content": "content",
          "title": "title"
        },
        "exclude": []
      },
      "other_fields": {
        "select_fields": [
          "timestamp",
          "author"
        ],
        "exclude_fields": []
      }
    },
    "result": {
      "name": "result",
      "additional_fields": [
        "title",
        "seq_id",
        "content",
        "author",
        "timestamp"
      ]
    }
  },
  "tasks": [
    {
      "name": "ArticleFilter",
      "order": "1",
      "type": "pre-processing",
      "module_name": "tasks.article_filter_task",
      "params": {
        "connection": {
          "mode": "standalone",
          "standalone": {
            "host": "localhost",
            "port": "6379"
          },
          "cluster": [
            {
              "host": "172.17.0.1",
              "port": "8005"
            }
          ]
        }
      }
    }
  ],
  "app": {
    "reader": "kafka_reader",
    "writer": null,
    "input_staging": "cv_staging"
  }
}
